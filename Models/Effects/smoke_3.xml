<PropertyList>
	<particlesystem>
		<name>engine-smoke</name>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<roll-deg>0</roll-deg>
			<pitch-deg>0</pitch-deg>
			<heading-deg>0</heading-deg>
		</offsets>
		<texture>smoke.png</texture>
		<condition>
			<or>
				<greater-than>
					<property>engines/engine[2]/n1</property>
					<value>98</value>
				</greater-than>
				<and>
					<greater-than>
						<property>engines/engine[2]/n1</property>
						<value>0.5</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/n1</property>
						<value>5</value>
					</less-than>
				</and>
			</or>
		</condition>
		<emissive>false</emissive>
		<lighting>false</lighting>
		<align>billboard</align>
		<attach>world</attach>
		<placer>
			<type>point</type>
		</placer>
		<shooter>
			<theta-min-deg>20</theta-min-deg>
			<theta-max-deg>35</theta-max-deg>
			<phi-min-deg>-15</phi-min-deg>
			<phi-max-deg> 15</phi-max-deg>
			<speed-mps>
				<value>1.8</value>
				<spread>3.5</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>0</x-min-deg-sec>
				<y-min-deg-sec>0</y-min-deg-sec>
				<z-min-deg-sec>-180</z-min-deg-sec>
				<x-max-deg-sec>0</x-max-deg-sec>
				<y-max-deg-sec>0</y-max-deg-sec>
				<z-max-deg-sec>180</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>40</value>
				<spread>3</spread>
			</particles-per-sec>
		</counter>
		<particle>
			<start>
				<color>
					<red><value>0.1</value></red>
					<green><value>0.1</value></green>
					<blue><value>0.11</value></blue>
					<alpha><value>0.2</value></alpha>
				</color>
				<size>
					<value>0.2</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>0.1</value></red>
					<green><value>0.1</value></green>
					<blue><value>0.11</value></blue>
					<alpha><value>0</value></alpha>
				</color>
				<size>
					<value>5.0</value>
				</size>
			</end>
			<life-sec>
				<value>3</value>
			</life-sec>
			<mass-kg>1.2</mass-kg>
			<radius-m>0.40</radius-m>
		</particle>
		<program>
			<fluid>air</fluid>
			<gravity>true</gravity>
			<wind>true</wind>
		</program>
	</particlesystem>
</PropertyList>
