<PropertyList>
  <path>epanel.ac</path>
  
	<animation>
		<type>material</type>
		  <object-name>KnobPanelLight</object-name>
		  <object-name>nightHelp</object-name>
		  <object-name>sockle</object-name>
		  <object-name>sockle.001</object-name>
		  <object-name>sockle.002</object-name>
		  <object-name>sockle.003</object-name>
		  <object-name>switch</object-name>
		  <object-name>switch.001</object-name>
		  <object-name>switch.002</object-name>
		  <object-name>switch.003</object-name>
      <object-name>nightHelp</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		  <object-name>KnobPanelLight</object-name>
		  <object-name>nightHelp</object-name>
		  <object-name>sockle</object-name>
		  <object-name>sockle.001</object-name>
		  <object-name>sockle.002</object-name>
		  <object-name>sockle.003</object-name>
		  <object-name>switch</object-name>
		  <object-name>switch.001</object-name>
		  <object-name>switch.002</object-name>
		  <object-name>switch.003</object-name>
      <object-name>nightHelp</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

  <animation>
      <type>select</type>
      <object-name>nightHelp</object-name>
      <condition>
        <less-than>
          <property>sim/multiplay/generic/float[3]</property>
          <value>0.4</value>
        </less-than>
      </condition>
  </animation>

	<!--  REMBRANDT support for transparent objects 
	<effect>
	<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>OHPanelEl</object-name>
	</effect>
  -->
  
  <!-- Nav-Lights -->
  <animation>
      <type>rotate</type>
      <object-name>switch</object-name>
      <property>/controls/lighting/nav-lights</property>
      <interpolation> 
              <entry>
                  <ind>0</ind>
                  <dep>35</dep>
              </entry>
              <entry>
                  <ind>1</ind>
                  <dep>-10</dep>
              </entry>		
          </interpolation>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
      <center>
      <x-m>0.0</x-m>
      <y-m>-0.22</y-m>
      <z-m>0.0</z-m>
      </center>  
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch</object-name>
      <object-name>sockle</object-name>		
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>/controls/lighting/nav-lights</property>
          </binding>		
          <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>		
      </action>
  </animation>

  <!-- Beacon -->
  <animation>
      <type>rotate</type>
      <object-name>switch.001</object-name>
      <property>/controls/lighting/beacon</property>
      <interpolation> 
              <entry>
                  <ind>0</ind>
                  <dep>35</dep>
              </entry>
              <entry>
                  <ind>1</ind>
                  <dep>-10</dep>
              </entry>		
          </interpolation>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
      <center>
      <x-m>0.0</x-m>
      <y-m>-0.19</y-m>
      <z-m>0.0</z-m>
      </center>  
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch.001</object-name>
      <object-name>sockle.001</object-name>		
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>/controls/lighting/beacon</property>
          </binding>		
          <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>		
      </action>
  </animation>

  <!-- Strobe -->
  <animation>
      <type>rotate</type>
      <object-name>switch.002</object-name>
      <property>/controls/lighting/strobe</property>
      <interpolation> 
              <entry>
                  <ind>0</ind>
                  <dep>35</dep>
              </entry>
              <entry>
                  <ind>1</ind>
                  <dep>-10</dep>
              </entry>		
          </interpolation>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
      <center>
      <x-m>0.0</x-m>
      <y-m>-0.16</y-m>
      <z-m>0.0</z-m>
      </center>  
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch.002</object-name>
      <object-name>sockle.002</object-name>		
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>/controls/lighting/strobe</property>
          </binding>		
          <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>		
      </action>
  </animation>

  <!-- Landing-Light -->
  <animation>
      <type>rotate</type>
      <object-name>switch.003</object-name>
      <!-- <property>/controls/lighting/landing-lights</property> -->
      <property>sim/multiplay/generic/int[0]</property>  
      <interpolation> 
              <entry>
                  <ind>0</ind>
                  <dep>35</dep>
              </entry>
              <entry>
                  <ind>1</ind>
                  <dep>-10</dep>
              </entry>		
          </interpolation>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
      <center>
      <x-m>0.0</x-m>
      <y-m>-0.13</y-m>
      <z-m>0.0</z-m>
      </center>  
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch.003</object-name>
      <object-name>sockle.003</object-name>		
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>/controls/lighting/landing-lights</property>
          </binding>		
          <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>		
      </action>
  </animation>

  <!-- Dimmer -->
  <animation>
      <type>rotate</type>
      <object-name>KnobPanelLight</object-name>
      <object-name>nightHelp</object-name>
      <!-- <property>/systems/electrical/outputs/panel-dim</property> -->
      <property>sim/multiplay/generic/float[3]</property>
      <interpolation>
        <entry><ind>0</ind><dep> 25</dep></entry>
        <entry><ind>1</ind><dep>-90</dep></entry>
      </interpolation>
      <axis>
          <x>1</x>
          <y>0.0</y>
          <z>0.0</z>
      </axis>
      <center>
          <x-m> 0.0</x-m>
          <y-m>-0.279</y-m>
          <z-m> 0.0</z-m>
      </center>
  </animation>

  <animation>
      <type>pick</type>
      <object-name>KnobPanelLight</object-name>
      <object-name>nightHelp</object-name>
      <object-name>KPLscroll</object-name>
      <visible>true</visible>
      <action>
          <button>0</button>
          <repeatable>true</repeatable>
          <interval-sec>0.2</interval-sec>
          <binding>
              <condition>
                <greater-than>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <value>0.0</value>
                </greater-than>
              </condition>
              <command>property-adjust</command>
              <property>/systems/electrical/outputs/panel-dim</property>
              <step>0.1</step>
              <min>0.01</min>
              <max>1</max>
          </binding>
          <binding>
            <condition>
              <greater-than>
                <property>/systems/electrical/outputs/panel-dim</property>
                <value>0.0</value>
              </greater-than>
            </condition>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>
      </action>

      <action>
          <button>1</button>
          <repeatable>true</repeatable>
          <interval-sec>0.2</interval-sec>
          <binding>
              <condition>
                <greater-than>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <value>0.0</value>
                </greater-than>
              </condition>
              <command>property-adjust</command>
              <property>/systems/electrical/outputs/panel-dim</property>
              <step>-0.1</step>
              <min>0.01</min>
              <max>1</max>
          </binding>
          <binding>
            <condition>
              <greater-than>
                <property>/systems/electrical/outputs/panel-dim</property>
                <value>0.0</value>
              </greater-than>
            </condition>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>
      </action>

      <action>
          <button>3</button>
              <binding>
                  <condition>
                    <greater-than>
                      <property>/systems/electrical/outputs/panel-dim</property>
                      <value>0.0</value>
                    </greater-than>
                  </condition>
                  <condition>
                <not><property>devices/status/keyboard/shift</property></not>
                <not><property>devices/status/keyboard/super</property></not>
                  </condition>
                  <command>property-adjust</command>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <step>0.01</step>
                  <min>0.01</min>
                  <max>1</max>
              </binding>
              <binding>
                  <condition>
                    <greater-than>
                      <property>/systems/electrical/outputs/panel-dim</property>
                      <value>0.0</value>
                    </greater-than>
                  </condition>
                  <condition>
               <or>
                <property>devices/status/keyboard/shift</property>
                <property>devices/status/keyboard/super</property>
               </or>
                  </condition>
                  <command>property-adjust</command>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <step>0.1</step>
                  <min>0.01</min>
                  <max>1</max>
              </binding>
          <binding>
            <condition>
              <greater-than>
                <property>/systems/electrical/outputs/panel-dim</property>
                <value>0.0</value>
              </greater-than>
            </condition>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>
      </action>

      <action>
          <button>4</button>
              <binding>
                  <condition>
                    <greater-than>
                      <property>/systems/electrical/outputs/panel-dim</property>
                      <value>0.0</value>
                    </greater-than>
                  </condition>
                  <condition>
                <not><property>devices/status/keyboard/shift</property></not>
                <not><property>devices/status/keyboard/super</property></not>
                  </condition>
                  <command>property-adjust</command>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <step>-0.01</step>
                  <min>0.01</min>
                  <max>1</max>
              </binding>
              <binding>
                  <condition>
                    <greater-than>
                      <property>/systems/electrical/outputs/panel-dim</property>
                      <value>0.0</value>
                    </greater-than>
                  </condition>
                  <condition>
               <or>
                <property>devices/status/keyboard/shift</property>
                <property>devices/status/keyboard/super</property>
               </or>
                  </condition>
                  <command>property-adjust</command>
                  <property>/systems/electrical/outputs/panel-dim</property>
                  <step>-0.1</step>
                  <min>0.01</min>
                  <max>1</max>
              </binding>
          <binding>
            <condition>
              <greater-than>
                <property>/systems/electrical/outputs/panel-dim</property>
                <value>0.09</value>
              </greater-than>
            </condition>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
          </binding>
      </action>
  </animation>


</PropertyList>
