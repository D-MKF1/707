<PropertyList>

<path>asi.ac</path>

	<animation>
		<type>material</type>
		<object-name>ASI.Face</object-name>
		<object-name>ASI.Needle</object-name>
		<object-name>IAS.Needle</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>ASI.Face</object-name>
		<object-name>ASI.Needle</object-name>
		<object-name>IAS.Needle</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

<animation>
  <type>rotate</type>
  <object-name>ASI.Needle</object-name>
  <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
  <interpolation>
    <entry><ind>  0</ind><dep>    0</dep></entry>
    <entry><ind> 50</ind><dep> 30.0</dep></entry>
    <entry><ind>100</ind><dep> 60.0</dep></entry>
    <entry><ind>120</ind><dep> 90.0</dep></entry>
    <entry><ind>140</ind><dep>120.0</dep></entry>
    <entry><ind>160</ind><dep>150.0</dep></entry>
    <entry><ind>170</ind><dep>165.0</dep></entry>
    <entry><ind>180</ind><dep>180.0</dep></entry>
    <entry><ind>190</ind><dep>195.0</dep></entry>
    <entry><ind>200</ind><dep>210.0</dep></entry>
    <entry><ind>250</ind><dep>240.0</dep></entry>
    <entry><ind>300</ind><dep>270.0</dep></entry>
    <entry><ind>350</ind><dep>300.0</dep></entry>
    <entry><ind>400</ind><dep>330.0</dep></entry>    
    <entry><ind>600</ind><dep>358.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>IAS.Needle</object-name>
  <property>/autopilot/settings/target-speed-kt</property>
  <interpolation>
    <entry><ind>  0</ind><dep>    0</dep></entry>
    <entry><ind> 50</ind><dep> 30.0</dep></entry>
    <entry><ind>100</ind><dep> 60.0</dep></entry>
    <entry><ind>120</ind><dep> 90.0</dep></entry>
    <entry><ind>140</ind><dep>120.0</dep></entry>
    <entry><ind>160</ind><dep>150.0</dep></entry>
    <entry><ind>170</ind><dep>165.0</dep></entry>
    <entry><ind>180</ind><dep>180.0</dep></entry>
    <entry><ind>190</ind><dep>195.0</dep></entry>
    <entry><ind>200</ind><dep>210.0</dep></entry>
    <entry><ind>250</ind><dep>240.0</dep></entry>
    <entry><ind>300</ind><dep>270.0</dep></entry>
    <entry><ind>350</ind><dep>300.0</dep></entry>
    <entry><ind>400</ind><dep>330.0</dep></entry>    
    <entry><ind>600</ind><dep>358.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<!--  speed.set control -->
  <animation>
    <type>pick</type>
    <object-name>ASI.Face</object-name>
    <visible>true</visible>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>		          
	          <condition>
            <not><property>devices/status/keyboard/shift</property></not>
            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
	          <command>property-adjust</command>
	          <property>/autopilot/settings/target-speed-kt</property>
	          <step>1</step>
	          <min>0</min>
	          <max>500</max>
	          <wrap>1</wrap>
        </binding>
        <binding>		          
	          <condition>
           <or>
            <property>devices/status/keyboard/shift</property>
            <property>devices/status/keyboard/super</property>
           </or>
		        </condition>
	          <command>property-adjust</command>
	          <property>/autopilot/settings/target-speed-kt</property>
	          <step>5</step>
	          <min>0</min>
	          <max>500</max>
	          <wrap>1</wrap>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch3</property>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>		          
	          <condition>
            <not><property>devices/status/keyboard/shift</property></not>
            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
        <command>property-adjust</command>
        <property>/autopilot/settings/target-speed-kt</property>
        <step>-1</step>
        <min>0</min>
        <max>500</max>
        <wrap>1</wrap>
        </binding>            
        <binding>		          
	          <condition>
           <or>
            <property>devices/status/keyboard/shift</property>
            <property>devices/status/keyboard/super</property>
           </or>
		        </condition>
        <command>property-adjust</command>
        <property>/autopilot/settings/target-speed-kt</property>
        <step>-5</step>
        <min>0</min>
        <max>500</max>
        <wrap>1</wrap>
        </binding>
    </action>
    <action>
      <name>increase</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/target-speed-kt</property>
        <step>10</step>
        <min>0</min>
        <max>500</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>decrease</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/target-speed-kt</property>
        <step>-10</step>
        <min>0</min>
        <max>500</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>
