<PropertyList include="table.xml">

	<path>radarblind.ac</path>

	<animation>
		<type>material</type>
  		<object-name>sup</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.05</red>
			<green>0.05</green>
			<blue>0.05</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
  		<object-name>sup</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
			<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
			<object-name>shadow</object-name>
  </effect>
	
	<animation>
		<type>select</type>
		<object-name>script</object-name>
		<condition>
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>9999</value>
			</greater-than>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>dark</object-name>
		<condition>
			<or>
				<less-than>
					<property>/b707/ess-bus</property>
					<value>20</value>
				</less-than>
				<not><property>/instrumentation/mptcas/on</property></not>
			</or>
		</condition>
	</animation>

</PropertyList>
