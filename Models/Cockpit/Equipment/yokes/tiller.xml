<PropertyList>

  <path>tiller.ac</path>
  
	<animation>
		<type>material</type>
		<object-name>Tiller</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Tiller</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>
	
  <animation>
    <type>rotate</type>
		<object-name>Tiller</object-name>
		<condition>
			<property>/controls/gear/gear-down</property>
		</condition>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -40 </factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x> 0 </x> 
      <y> 1 </y> 
      <z> 0 </z> 
    </axis>
  </animation>
	
  <animation>
    <type>rotate</type>
		<object-name>shadow</object-name>
		<condition>
			<property>/controls/gear/gear-down</property>
		</condition>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -10 </factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x> 0 </x> 
      <y> 1 </y> 
      <z> 0 </z> 
    </axis>
  </animation>
  
  <animation>
      <type>pick</type>
			<object-name>Tiller</object-name>
			<object-name>shadow</object-name>
      <action>
          <button>0</button>
          <binding>
							<command>nasal</command>
							<script>interpolate("/controls/flight/rudder", 0, 1);</script>
          </binding>
      </action>
      <action>
          <button>3</button>
          <binding>
              <command>property-adjust</command>
              <property>/controls/flight/rudder</property>
              <step>0.01</step>
              <min>-1</min>
              <max> 1</max>
              <wrap>0</wrap>
          </binding>
      </action>
      <action>
          <button>4</button>
          <binding>
              <command>property-adjust</command>
              <property>/controls/flight/rudder</property>
              <step>-0.01</step>
              <min>-1</min>
              <max> 1</max>
              <wrap>0</wrap>
          </binding>
      </action>
  </animation>
  
</PropertyList>
