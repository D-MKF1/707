<PropertyList>

<path>cabinClimb.ac</path>

	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>	
		<object-name>rateAngle</object-name>
		<object-name>manualAngle</object-name>	
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>rateAngle</object-name>
		<object-name>manualAngle</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/b707/pressurization/climb-rate</property>
		<min>-1880.0</min>
		<max>1880.0</max>
		<scale>1.0</scale>
		<interpolation>
		  <entry><ind>-2000</ind><dep>-180</dep></entry>
		  <entry><ind>-1000</ind><dep>-100</dep></entry>
		  <entry><ind>    0</ind><dep>  0</dep></entry>
		  <entry><ind> 1000</ind><dep> 100</dep></entry>
		  <entry><ind> 2000</ind><dep> 180</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>rateAngle</object-name>
		<property>/b707/pressurization/incr-decr-rate</property>
		<min>-1900.0</min>
		<max>1900.0</max>
		<scale>1.0</scale>
		<interpolation>
		  <entry><ind>-2000</ind><dep>-180</dep></entry>
		  <entry><ind>-1000</ind><dep>-100</dep></entry>
		  <entry><ind>    0</ind><dep>  0</dep></entry>
		  <entry><ind> 1000</ind><dep> 100</dep></entry>
		  <entry><ind> 2000</ind><dep> 180</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>manualAngle</object-name>
		<property>/b707/pressurization/manual-control-selector</property>
		<min>-1900.0</min>
		<max>1900.0</max>
		<scale>1.0</scale>
		<interpolation>
		  <entry><ind>-2000</ind><dep>-180</dep></entry>
		  <entry><ind>-1000</ind><dep>-100</dep></entry>
		  <entry><ind>    0</ind><dep>  0</dep></entry>
		  <entry><ind> 1000</ind><dep> 100</dep></entry>
		  <entry><ind> 2000</ind><dep> 180</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>

</PropertyList>
