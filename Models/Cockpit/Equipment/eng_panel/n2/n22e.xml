<PropertyList>

<path>n2engineer.ac</path>	
	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/engines/engine[1]/n2</property>
		<interpolation>
		  <entry><ind>  0.0</ind><dep>    0.0</dep></entry>
		  <entry><ind>100.0</ind><dep>  270.0</dep></entry>
		</interpolation>
		<axis>
		  <x> 0</x>
		  <y> 1</y>
		  <z> 0</z>
		</axis>
	</animation>

	<animation> 
		<type>rotate</type>
		<object-name>needle.001</object-name>
		<property>/engines/engine[1]/n2</property>
    <factor>36</factor>
		<center>   
		  <x-m>-0.0098 </x-m> 
		  <y-m> 0.0 </y-m>
			<z-m> 0.01 </z-m>
		</center>
		<axis> 
		  <x> 0</x>
		  <y> 1</y>
		  <z> 0</z>
		</axis>
	</animation>

</PropertyList>
