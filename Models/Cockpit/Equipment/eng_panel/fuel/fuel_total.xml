<PropertyList>

<path>fuel2.ac</path>

	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<object-name>face</object-name>
		<texture>fuelface5.png</texture>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>		
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>
		<property>/consumables/fuel/total-fuel-kg</property>
		<interpolation>
		  <entry><ind>    0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind> 80000.0</ind><dep> 320.0</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>needle.001</object-name>
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>
		<property>/consumables/fuel/total-fuel-kg</property>
		<factor>100</factor>    
		<center>
		  <x-m> 0.0</x-m>
		  <y-m> 0.0</y-m>
		  <z-m>-0.015</z-m>
    </center>  
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
			<object-name>bezel</object-name>
			<object-name>face</object-name>
		<visible>true</visible>
		    <action>
		      <name>show info</name>
		      <button>0</button>
		    	<repeatable>true</repeatable>			
		      <binding>
						<command>nasal</command>
						<script>b707.show_fuel_consumption()</script>
					</binding>
		    </action>
	</animation>
	
</PropertyList>
