<PropertyList>

<path>alt.ac</path>

	<animation>
		<type>material</type>
		<object-name>support</object-name>
		<object-name>ALT.Knob</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>ALT.Face</object-name>
		<object-name>ALT.FacePressure</object-name>
		<object-name>ALT.Needle1</object-name>
		<object-name>ALT.Needle2</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>ALT.Face</object-name>
		<object-name>ALT.FacePressure</object-name>
		<object-name>ALT.Needle1</object-name>
		<object-name>ALT.Needle2</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>	

<animation>
  <type>rotate</type>
  <object-name>ALT.Needle1</object-name>
  <property>/b707/pressurization/cabin-altitude</property>
  <factor>0.36</factor>
  <axis>
    <x> 0</x>
    <y> 1</y>
    <z> 0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ALT.Needle2</object-name>
  <property>/b707/pressurization/cabin-altitude</property>
  <factor>0.036</factor>
  <axis>
    <x> 0</x>
    <y> 1</y>
    <z> 0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ALT.FacePressure</object-name>
  <property>/instrumentation/altimeter/setting-inhg</property>
  <interpolation>
    <entry><ind>  28.0</ind><dep> 200</dep></entry>
    <entry><ind>  29.0</ind><dep> 99.87</dep></entry>
    <entry><ind>  30.0</ind><dep>  0.0</dep></entry>
    <entry><ind>  31.0</ind><dep>-99.7</dep></entry>
    <entry><ind>  31.0</ind><dep>-139.47</dep></entry>
  </interpolation>
  <axis>
    <x> 0</x>
    <y> 1</y>
    <z> 0</z>
  </axis>
</animation>

<animation>
	<type>pick</type>
		<object-name>ALT.FacePressure</object-name>
	<visible>true</visible>
	    <action>
	      <name>show info</name>
	      <button>0</button>
	    	<repeatable>true</repeatable>			
	      <binding>
					<command>nasal</command>
					<script>b707.show_cabin_alt()</script>
				</binding>
	    </action>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ALT.Knob</object-name>
  <property>/instrumentation/altimeter/setting-inhg</property>
  <factor>500</factor>
  <center>
    <x-m> 0.0203</x-m>
    <y-m> 0</y-m>
    <z-m>-0.0205	</z-m>
  </center>
  <axis>
    <x> 0</x>
    <y> 1</y>
    <z> 0</z>
  </axis>
</animation>

<animation>
    <type>pick</type>
  	<object-name>ALT.Knob</object-name>
    <visible>true</visible>      
    <action>
      <name>show info</name>
      <button>0</button>
    	<repeatable>true</repeatable>			
      <binding>
				<command>nasal</command>
				<script>b707.show_alti()</script>
			</binding>
    </action>
    <action>
        <button>3</button>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/altimeter/setting-inhg</property>
        <step>0.01</step>
        <min>29.0</min>
        <max>31.0</max>
        <wrap>false</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <binding>
        <command>property-adjust</command>
        <property>/instrumentation/altimeter/setting-inhg</property>
        <step>-0.01</step>
        <min>29.0</min>
        <max>31.0</max>
        <wrap>false</wrap>
        </binding>
    </action>
</animation>

</PropertyList>

