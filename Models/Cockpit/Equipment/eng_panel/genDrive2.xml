<PropertyList>
 <path>genDrive.ac</path>

	<animation>
		<type>material</type>
		<object-name>LampAmber</object-name>
		<object-name>sockle</object-name>
		<object-name>sockle.001</object-name>  
		<object-name>switch</object-name>
		<object-name>cover</object-name>
		<object-name>bezel</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<condition>	
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>noshadow</type>
		<object-name>LampAmber</object-name>
		<object-name>LampAmberON</object-name>
	</animation>

	<animation>
		<type>material</type>
		<object-name>LampAmberON</object-name>
		<emission>
		  <red>   1.0 </red>
		  <green> 0.8 </green>
		  <blue>  0.4 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>LampAmberON</object-name>
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		  	<not><property>/b707/generator/gen-drive[1]</property></not>
		  	<less-than>
		    	<property>/engines/engine[1]/oil-pressure-psi</property>
		    	<value>37</value>
		    </less-than>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>
	
	<!-- oil temp -->
	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		</condition>
		<property>/engines/engine[1]/epr</property>
		<interpolation>
		  <entry><ind>  0.0</ind><dep>  0.0</dep></entry>
		  <entry><ind>  1.0</ind><dep>  0.0</dep></entry>
		  <entry><ind>  1.2</ind><dep> 94.0</dep></entry>
		</interpolation>    
		<center>
		  <x-m>-0.0146</x-m>
		  <y-m> 0.0</y-m>
		  <z-m>-0.068</z-m>
    </center>  
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
  <!-- Cover -->
  <animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>/b707/generator/gen-drive-cover[1]</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-90.0</dep>
            </entry>		
        </interpolation>
    <axis>
     <x> 1</x>
     <y> 0</y>
     <z> 0</z>
    </axis>
    <center>
    <x-m> 0.0</x-m>
    <y-m>-0.0003</y-m>
    <z-m> 0.0157</z-m>
    </center>  
  </animation>

	<animation>
		  <type>pick</type>
		  <object-name>cover</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>/b707/generator/gen-drive-cover[1]</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch3</property>
		    </binding>
		  </action>
	</animation>

	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>/b707/generator/gen-drive[1]</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m>0.0</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.0</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <object-name>sockle</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>/b707/generator/gen-drive[1]</property>
		    </binding>          
		    <binding>
          <command>nasal</command>
          <script>b707.ac_sync();</script>
        </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
 
</PropertyList>
