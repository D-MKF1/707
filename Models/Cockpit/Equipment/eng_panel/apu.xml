<PropertyList>
 <path>apu.ac</path>

	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<object-name>extbottlesup</object-name> 
		<object-name>switch</object-name> 
		<object-name>switch.001</object-name> 
		<object-name>switch.002</object-name> 
		<object-name>switch.003</object-name> 
		<object-name>sockle</object-name> 
		<object-name>sockle.001</object-name> 
		<object-name>sockle.002</object-name>
		<object-name>knob</object-name>
		<object-name>knob.001</object-name>
		<object-name>knobsup</object-name>
		<condition>			
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<object-name>needle.002</object-name>
		<object-name>needle.003</object-name>
		<condition>			
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<object-name>needle</object-name>
		<object-name>needle.001</object-name>
		<object-name>needle.002</object-name>
		<object-name>needle.003</object-name>
		<condition>			
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/engineer-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/engineer-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>noshadow</type>
		<object-name>LampAmberON</object-name>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LampAmberON</object-name>
		<emission>
		  <red>   5.0 </red>
		  <green> 0.0 </green>
		  <blue>  0.0 </blue>
		</emission>
	</animation>

  <!-- fire warning light -->
  <animation>
		<type>select</type>
		<object-name>LampAmberON</object-name>
		<condition>			
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		    <property>/b707/apu/apu-fire-switch</property>
		  	<property>/b707/apu/apu-fire-test</property>
		  	<property>/b707/apu/on-fire</property>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>
	
  <!-- apu generator switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch</object-name>
		  <property>/b707/generator/gen-drive[4]</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m> 0.0</x-m>
		  <y-m>-0.0038</y-m>
		  <z-m>-0.1979</z-m>
		  </center>  
	</animation>
	
	<animation>
		  <type>pick</type>
		  <object-name>switch</object-name>
		  <object-name>sockle</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
            <command>nasal</command>
            <script>b707.apu_gen_switch();</script>
        </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
	
  <!-- apu bleed valve switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch.001</object-name>
		  <property>/b707/apu/apu-bleed-valve</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m> 0.0</x-m>
		  <y-m>-0.0038</y-m>
		  <z-m>-0.1979</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch.001</object-name>
		  <object-name>sockle.001</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		        <property>/b707/apu/apu-bleed-valve</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
	
	<!-- apu fire test -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch.002</object-name>
		  <property>/b707/apu/apu-fire-test</property>
      <factor>-60</factor>
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m> 0.0</x-m>
		  <y-m>-0.0038</y-m>
		  <z-m>-0.0708</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch.002</object-name>
		  <object-name>sockle.002</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		        <command>property-toggle</command>
		  			<property>/b707/apu/apu-fire-test</property>
		    </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
		
	<!-- apu master switch -->
	<animation>
		  <type>rotate</type>
		  <object-name>switch.003</object-name>
		  <property>b707/apu/off-start-run</property>
			<interpolation>
				<entry><ind>  0.0</ind><dep>   0.0</dep></entry>
				<entry><ind>  1.0</ind><dep> -60.0</dep></entry>
				<entry><ind>  2.0</ind><dep> -30.0</dep></entry>
			</interpolation>   
		  <axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		  </axis>
		  <center>
		  <x-m> 0.0</x-m>
		  <y-m> 0.0004</y-m>
		  <z-m>-0.118</z-m>
		  </center>  
	</animation>

	<animation>
		  <type>pick</type>
		  <object-name>switch.003</object-name>
		  <action>
		    <button>0</button>
		    <repeatable>false</repeatable>
        <binding>
		      <command>property-toggle</command>
		      <property>/b707/apu/starter</property>
        </binding>
		    <binding>
		      <command>property-toggle</command>
		      <property>/sim/sound/switch2</property>
		    </binding>
		  </action>
	</animation>
	
  <!-- apu fire extinguisher -->
  <animation>
      <type>translate</type>
      <object-name>knob</object-name>
      <property>/b707/apu/apu-fire-ext</property>
      <factor>0.0030</factor>
      <axis>
          <x> 0.0</x>
          <y> 1.0</y>
          <z> 0.0</z>
      </axis>
      <center>
          <x-m>-0.08</x-m>
          <y-m>-0.0054</y-m>
          <z-m> 0.0768</z-m>
      </center>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>knob</object-name>
    <object-name>knobsup</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-assign</command>
          <property>/b707/apu/apu-fire-ext</property>  
          <value>1.0</value>
        </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>/b707/apu/apu-fire-ext</property>  
          <value>0.0</value>
        </binding>
      </mod-up>
    </action>
  </animation>
  
  <!-- apu fire switch -->
  <animation>
      <type>translate</type>
      <object-name>knob.001</object-name>
			<object-name>LampAmberON</object-name>
      <property>/b707/apu/apu-fire-switch</property>
      <factor>0.01</factor>
      <axis>
          <x> 0.0</x>
          <y> 1.0</y>
          <z> 0.0</z>
      </axis>
      <center>
          <x-m> 0.0046</x-m>
          <y-m>-0.0032</y-m>
          <z-m> 0.09</z-m>
      </center>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>knob.001</object-name>
		<object-name>LampAmberON</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-assign</command>
          <property>/b707/apu/apu-fire-switch</property>  
          <value>1.0</value>
        </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>/b707/apu/apu-fire-switch</property>  
          <value>0.0</value>
        </binding>
      </mod-up>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-assign</command>
          <property>/b707/apu/apu-fire-switch</property>  
          <value>-1.0</value>
        </binding>
    </action>
  </animation>
  
	<!-- apu ampere -->
	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>/engines/APU/amp-needle</property>
		<interpolation>
		  <entry><ind>   0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind>  60.0</ind><dep> 100.0</dep></entry>
		  <entry><ind> 200.0</ind><dep> 118.0</dep></entry>
		</interpolation>
    <center>
        <x-m> 0.3746</x-m>
        <y-m> 0.0</y-m>
        <z-m>-0.1673</z-m>
    </center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<!-- exthause temperature -->
	<animation>
		<type>rotate</type>
		<object-name>needle.003</object-name>
		<property>/engines/APU/temp</property>
		<interpolation>
		  <entry><ind>   0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind> 920.0</ind><dep> 255.0</dep></entry>
		</interpolation>    
		<center>
        <x-m> 0.43</x-m>
        <y-m> 0.0</y-m>
        <z-m>-0.1597</z-m>
    </center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>  
	
	<!-- apu rpm -->
	<animation>
		<type>rotate</type>
		<object-name>needle.002</object-name>
		<property>/engines/APU/rpm</property>
		<interpolation>
		  <entry><ind>   0.0</ind><dep>   0.0</dep></entry>
		  <entry><ind> 100.0</ind><dep> 270.0</dep></entry>
		  <entry><ind> 114.0</ind><dep> 308.0</dep></entry>
		  <entry><ind> 200.0</ind><dep> 308.0</dep></entry>
		</interpolation>
    <center>
        <x-m> 0.4274</x-m>
        <y-m> 0.0</y-m>
        <z-m>-0.1123</z-m>
    </center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation> 
		<type>rotate</type>
		<object-name>needle.001</object-name>
		<property>/engines/APU/rpm</property>
    <factor>36.0</factor>
		<center>   
		  <x-m> 0.4246 </x-m> 
		  <y-m> 0.0 </y-m>
			<z-m>-0.1008 </z-m>
		</center>
		<axis> 
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>  

 
</PropertyList>
