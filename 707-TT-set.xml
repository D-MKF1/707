					<binding>
						 <command>dialog-show</command>
						 <dialog-name>pushback</dialog-name>
					</binding>
				</item>				
				<item>
					<label>Fuel Truck Controls</label>
					<binding>
						<command>nasal</command>
							<script>
						 	   var fuel = gui.Dialog.new("sim/gui/dialogs/fuel/dialog", "Aircraft/707/Systems/fuel-truck.xml");
