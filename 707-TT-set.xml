				</item>
				<item>
					<label>Show/hide yokes</label>
					<binding>
						<command>property-toggle</command>
		    		<property>sim/yokes-visible</property>
					</binding>
				</item>
				<item>
					<label>--- Equipment ---</label>
					<enabled>false</enabled>
				</item>
				<item>
					<label>Pushback</label>
